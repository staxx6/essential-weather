<div class="weather-block">
    <ul>
        {{#if this.time}}
            <li><span class="time time-{{name}}">{{this.time}}</span></li>
        {{/if}}
        {{#if this.temp}}
            {{#if this.time}}
                <li><div class="icon">{{{this.icon}}}</div></li>
            {{/if}}
            <li><span id="weather-{{name}}-temp-data" class="temp temp-current">{{this.temp}}</span></li>
            {{#unless this.time}}
                <li><div class="icon">{{{this.icon}}}</div></li>
            {{/unless}}
            {{!--<li><span id="weather-{{name}}-icon-data" class="icon">{{{this.icon}}}</span></li>--}}
        {{/if}}
        {{#if this.tempMax}}
            {{#unless this.temp}}
                {{!--<li><span id="weather-{{name}}-icon-data" class="icon">{{{this.icon}}}</span></li>--}}
                <li><div class="icon">{{{this.icon}}}</div></li>
            {{/unless}}
            <li>
                <span id="weather-{{name}}-tempMin-data" class="temp temp-range temp-min">{{this.tempMin}}</span>
                {{#if this.temp}}
                    <span id="weather-range-separator">/</span>
                {{/if}}
                <span id="weather-{{name}}-tempMax-data" class="temp temp-range temp-max">{{this.tempMax}}</span>
            </li>
        {{/if}}
        <li>
            <span id="weather-{{name}}-precip-probability-data" class="precip-probability">
                <img alt="precip probability" class="precip-probability" src="..\img\precip-probability.svg"></img>
                {{this.precipProbability}}
            </span>
        </li>
    </ul>
</div>
