<div class="weather-block">
    <ul>
        {{#if this.temp}}
            <li><span id="weather-{{name}}-temp-data" class="tempCurrent">{{this.temp}}</span></li>
            <li><span id="weather-{{name}}-icon-data" class="icon">{{this.icon}}</span></li>
        {{/if}}
        {{#if this.tempMax}}
            <li>
                <span id="weather-{{name}}-tempMin-data" class="tempMax">{{this.tempMin}}</span> /
                <span id="weather-{{name}}-tempMax-data" class="tempMin">{{this.tempMax}}</span>
            </li>
            {{#unless this.temp}}
                <li><span id="weather-{{name}}-icon-data" class="icon">{{this.icon}}</span></li>
            {{/unless}}
        {{/if}}
        <li>R: <span id="weather-{{name}}-precipProbability-data" class="precipProbability">{{this.precipProbability}}</span></li>
    </ul>
</div>
